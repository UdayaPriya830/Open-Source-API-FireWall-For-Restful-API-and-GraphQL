# Maximum number of requests per minute per IP
RATE_LIMIT=10

# Allowed IPs (comma-separated, leave empty to allow all)
ALLOWED_IPS=127.0.0.1,192.168.1.5

# Allowed API keys (comma-separated, leave empty to disable API key check)
API_KEYS=mysecretapikey,anotherkey

# Maximum GraphQL query depth
MAX_GRAPHQL_DEPTH=5

# Maximum request body size in bytes (1MB default)
MAX_REQUEST_SIZE=1048576

# Enable ML anomaly detection
ENABLE_ML_DETECTION=true
